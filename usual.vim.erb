<% require './util.rb' -%>
set background=light
hi clear

if exists("syntax_on")
  syntax reset
endif

let colors_name="usual"

" Vim UI
hi Cursor        <%= style(fg: WHITE, bg: LIGHT_BLUE) %>
hi Cursorline    <%= style(fg: NONE, bg: LIGHT_GRAY, decoration: NONE) %>
hi MatchParen    <%= style(fg: NONE, bg: NONE, decoration: UNDERLINE) %>
hi Pmenu         <%= style(fg: WHITE, bg: DARK_GRAY) %>
hi PmenuThumb    <%= style(bg: LIGHT_GRAY) %>
hi PmenuSBar     <%= style(bg: DARK_GRAY) %>
hi PmenuSel      <%= style(fg: WHITE, bg: LIGHT_BLUE) %>
hi ColorColumn   <%= style(bg: LIGHT_GRAY) %>
hi SpellBad      <%= style(fg: RED, bg: NONE, decoration: UNDERLINE) %>
hi SpellCap      <%= style(fg: GREEN, bg: NONE, decoration: UNDERLINE) %>
hi SpellRare     <%= style(fg: YELLOW, bg: NONE, decoration: UNDERLINE) %>
hi SpellLocal    <%= style(fg: PURPLE, bg: NONE, decoration: UNDERLINE) %>
hi NonText       <%= style(fg: LIGHT_GRAY) %>
hi LineNr        <%= style(fg: DARK_GRAY, bg: NONE) %>
hi CursorLineNr  <%= style(fg: LIGHT_BLUE, bg: NONE) %>
hi ModeMsg       <%= style(fg: YELLOW, bg: NONE, decoration: BOLD) %>
hi Visual        <%= style(fg: NONE, bg: LIGHT_GRAY) %>
hi IncSearch     <%= style(fg: WHITE, bg: YELLOW, decoration: NONE) %>
hi Search        <%= style(fg: WHITE, bg: YELLOW) %>
hi StatusLine    <%= style(fg: WHITE, bg: LIGHT_BLUE, decoration: BOLD) %>
hi StatusLineNC  <%= style(fg: WHITE, bg: DARK_GRAY, decoration: BOLD) %>
hi VertSplit     <%= style(fg: NONE, bg: NONE, decoration: NONE) %>
hi TabLine       <%= style(fg: WHITE, bg: LIGHT_GRAY, decoration: NONE) %>
hi TabLineSel    <%= style(fg: WHITE, bg: DARK_GRAY) %>
hi TabLineFill   <%= style(fg: NONE, bg: NONE, decoration: NONE) %>
hi Folded        <%= style(fg: DARK_GRAY, bg: NONE) %>
hi Directory     <%= style(fg: CYAN) %>
hi Title         <%= style(fg: NONE) %>
hi ErrorMsg      <%= style(fg: WHITE, bg: RED) %>
hi WarningMsg    <%= style(fg: WHITE, bg: YELLOW) %>
hi DiffAdd       <%= style(fg: WHITE, bg: GREEN) %>
hi DiffChange    <%= style(fg: WHITE, bg: YELLOW) %>
hi DiffDelete    <%= style(fg: WHITE, bg: RED) %>
hi DiffText      <%= style(fg: NONE, bg: NONE, decoration: BOLD) %>
hi WildMenu      <%= style(fg: WHITE, bg: DARK_GRAY, decoration: BOLD) %>

hi! link CursorColumn  CursorLine
hi! link SignColumn    LineNr
hi! link FoldColumn    SignColumn
hi! link MoreMsg       ModeMsg
hi! link Question      ModeMsg
hi! link SpecialKey    NonText

" Generic syntax
hi Comment     <%= style(fg: DARK_GRAY) %>
hi String      <%= style(fg: RED) %>
hi Character   <%= style(fg: BLUE) %>
hi Number      <%= style(fg: BLUE) %>
hi Boolean     <%= style(fg: PURPLE) %>
hi Float       <%= style(fg: BLUE) %>
hi Identifier  <%= style(fg: BLUE) %>
hi Statement   <%= style(fg: PURPLE) %>
hi PreProc     <%= style(fg: YELLOW) %>
hi Type        <%= style(fg: PURPLE) %>
hi Special     <%= style(fg: YELLOW) %>
hi Delimiter   <%= style(fg: NONE) %>
hi Underlined  <%= style(fg: BLUE, decoration: UNDERLINE) %>
hi Ignore      <%= style(fg: LIGHT_GRAY) %>
hi Error       <%= style(fg: WHITE, bg: RED) %>
hi Todo        <%= style(fg: YELLOW, bg: NONE) %>

